{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["ES2020", "DOM"],
    "types": ["node"]
  },
  "include": [
    "sst.config.ts",
    "stacks/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "packages",
    ".sst"
  ]
}
